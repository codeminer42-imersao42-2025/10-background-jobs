{
  "name": "sprint-manager",
  "version": "1.0.0",
  "scripts": {
    "start:dev": "tsx --watch src/bin/server.ts",
    "start:workers": "tsx --watch src/bin/workers.ts",
    "start:scheduler": "tsx --watch src/bin/scheduler.ts",
    "db:migrate:dev": "knex migrate:latest --env=development",
    "db:rollback:dev": "knex migrate:rollback --env=development",
    "db:migrate:test": "knex migrate:latest --env=test",
    "db:rollback:test": "knex migrate:rollback --env=test",
    "test": "NODE_ENV=test vitest run --no-file-parallelism"
  },
  "keywords": [],
  "author": "Pedro Henrique <pedro.henrique@codeminer42.com>",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/nodemailer": "^7.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@bull-board/api": "^6.13.0",
    "@bull-board/fastify": "^6.13.0",
    "@fastify/jwt": "^10.0.0",
    "bullmq": "^5.58.9",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.0",
    "knex": "^3.1.0",
    "nodemailer": "^7.0.6",
    "objection": "^3.1.5",
    "sqlite3": "^5.1.7"
  }
}
